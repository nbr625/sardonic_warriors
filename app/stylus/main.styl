.game-title
  font-size: 5em
  margin: 0 0 0 13%
  width: 75%
  text-align: center
  font-family: 'VeniceClassic'
  color: white
  padding: 0 0 15% 0

.start-screen
  background-color: black
  padding: 20% 0 20% 0

.story-panel
  padding: 5% 0 0 5%
  background-color: black;

.story-text
  font-size: 1.5em;
  color: white;
  font-family: 'VT323'
  width:100%;
  overflow:hidden;
  white-space:nowrap;
  -webkit-animation: typing 2s steps(30, end)
  -moz-animation: typing 2s step(30, end)

.story-text:nth-child(2)
  width:100%;
  overflow:hidden;
  white-space:nowrap;
  -webkit-animation: typing2 4s steps(30, end)
  -moz-animation: typing2 4s step(30, end)

.story-text:nth-child(3)
  width:100%;
  overflow:hidden;
  white-space:nowrap;
  -webkit-animation: typing3 6s steps(30, end)
  -moz-animation: typing3 6s step(30, end)
.story-text:nth-child(4)
  width:100%;
  overflow:hidden;
  white-space:nowrap;
  -webkit-animation: typing4 8s steps(30, end)
  -moz-animation: typing4 8s step(30, end)


