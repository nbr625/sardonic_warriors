@require "bootstrap.min.css"

/* variables */
$lightgrey = #999
$linkColor = #555
$grey = #eee
$black = #3a3a3a
$white = #f7f7f7
$green = #4cae4c
$red = #b92c28
$blue = #2aabd2

@font-face {
  font-family: 'VeniceClassic'
  src: url('./VeniceClassic.ttf') format('truetype')
}


@-webkit-keyframes typing
  from { width: 0 }
  to { width:100% }


@-moz-keyframes typing
  from { width: 0 }
  to { width:100% }



@-webkit-keyframes typing2
  0% { width: 0 }
  50% {width: 0}
  100% { width:100% }

@-moz-keyframes typing2
  0% { width: 0 }
  50% {width: 0}
  100% { width:100% }

@-webkit-keyframes typing3
  0% { width: 0 }
  66% {width: 0}
  100% { width:100% }


@-moz-keyframes typing3
  0% { width: 0 }
  66% {width: 0}
  100% { width:100% }


@-webkit-keyframes typing4
  0% { width: 0 }
  75% {width: 0}
  100% { width:100% }


@-moz-keyframes typing4
  0% { width: 0 }
  75% {width: 0}
  100% { width:100% }

html
  background-color: $black

button
input
select
textarea 
  color: $black
  font-family: 'VT323'
  font-weight: normal
  font-style: normal

a
a:visited
  color: $linkColor
  text-decoration: none

a:hover
  color: lighten($linkColor,10%)
  
body
  color: $black
  font-size: 1em
  line-height: 1.5
  
header
  background: $grey
  color:$black
  padding: 1em
  
  nav
    float:right
    user-select:none
    
  .nav-item
    float:left
    margin-left:.5em
    
    a.active
      text-decoration:none
    
.content
  padding: 1em

.btn
  margin: 0 0 0 40%

